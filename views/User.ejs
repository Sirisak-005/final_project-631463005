<%- include("_header") -%>


<div class="table-responsive-sm">
  <table class="table table-hover bg-info">
    <thead class="t">
      <tr>
        <th>username</th>
        <th>password</th>
        <th>email</th>
        <th>tel</th>
        <th>img</th>
        <th>จัดการ</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(function(user) { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.password %></td>
          <td><%= user.email %></td>
          <td><%= user.tel %></td>
          <td><%= user.img %></td>
          <td class="d-print-none">
            <a class="btn btn-warning" href="/User/edit/<%= user.id %>">Edit</a>
              <form action="/User/delete/<%= user.id %>" method="post" style="display:inline-block;">
                <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
              </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include("_footer") -%>
